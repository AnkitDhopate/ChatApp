<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_image_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FriendProfileActivity"
            android:theme="@style/ChatTheme"/>
        <activity
            android:name=".ContactUsActivity"
            android:theme="@style/ChatTheme" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/ChatTheme" />
        <activity android:name=".ProfileSettingsActivity" />
        <activity
            android:name=".ChatWindowActivity"
            android:theme="@style/ChatTheme" />
        <activity
            android:name=".StartActivity"
            android:theme="@style/ChatTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchUserActivity"
            android:theme="@style/ChatTheme" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".PhoneVerificationActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
    </application>

</manifest>