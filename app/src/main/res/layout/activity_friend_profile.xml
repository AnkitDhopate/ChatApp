<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/user_temp_profile"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/friend_profile_name"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Loading name..."
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_profile_image"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:background="@drawable/stroke_btn"
        android:paddingLeft="20dp"/>


    <TextView
        android:id="@+id/friend_profile_phone"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Loading phone..."
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_profile_name"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/stroke_btn"
        android:paddingLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>