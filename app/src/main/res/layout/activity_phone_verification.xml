<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerificationActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait until we verify the OTP automatically\nIf using another mobile enter the OTP manually"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/confirm_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:text="Phone Number will  appear here"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:hint="Enter OTP received here"
        app:layout_constraintEnd_toEndOf="@+id/confirm_number"
        app:layout_constraintStart_toStartOf="@+id/confirm_number"
        app:layout_constraintTop_toBottomOf="@+id/confirm_number"
        android:layout_marginTop="200dp"
        android:background="@drawable/stroke_btn"/>

    <Button
        android:id="@+id/phone_verification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        android:textSize="16dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/solid_btn"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>